link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
meta(name="viewport", content="width=device-width, initial-scale=1.0")
link(rel="stylesheet", href="/scss/main.scss")

.books
  each book in allBooks
      .books_item


          span.book_item-img
          .spacer

          p.book_item-title=book.title
          .spacer

          p.book_item-title=book.author
          .spacer

          p=book.status
          .spacer

          p Дата выпуска - #{book.receiptDate}
          .spacer

          if book.returnDate !== null
              p Дата возврата - #{book.returnDate}
          .spacer

          button.books_item-more.w3-button.w3-khaki
              a(href='/view/' + book.id)
                p Подробнее
                    svg(xmlns="http://www.w3.org/2000/svg" style="margin-left: 5px;" height="1em" viewBox="0 0 512 512")
