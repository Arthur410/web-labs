html(lang="ru")
    head
        title Редактирование пользователя
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css", rel="stylesheet")
        link(rel="stylesheet", href="/scss/main.scss")
        script(src="https://code.jquery.com/jquery-3.7.1.min.js", integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=", crossorigin="anonymous")

    body.bg-gradient.bg-secondary.d-flex.justify-content-center.align-items-baseline
        .container.bg-dark.rounded.mt-1
            h1 Редактирование пользователя
            form(action=`/edit/${editUser.id}`, method='POST').edit-form.flex-column.d-flex.bg
                label(for='name') Название книги:
                input(type='text', name='name', id='name', value=editUser.name, placeholder='Введите имя').edit-input

                .mt-2

                label(for='email') Почта:
                input(type='email', name='email', id='email', value=editUser.email, placeholder='Введите почту').edit-input

                .mt-2
                label(for='birthdate') Дата Рождения:
                input(type='date', name='birthdate',
                    min="1900-01-01" max=`${new Date().toJSON().slice(0, 10)}`
                    id='birthdate', placeholder='Введите дату рождения').edit-input
                .mt-2

                label(for='role') Роль пользователя:
                select(name='role', id='role')
                    option(value='admin', selected=editUser.role === 'admin') Администратор
                    option(value='user', selected=editUser.role === 'user') Пользователь
                .mt-1
                label(for='status') Статус пользователя:
                select(name='status', id='status')
                    option(value='unconfirmed', selected=editUser.status === 'unconfirmed') Не подтверждённый пользователь
                    option(value='active', selected=editUser.status === 'active') Активный
                    option(value='blocked', selected=editUser.status === 'blocked') Заблокированный

                .mt-3
                button(type='submit', style="max-width: fit-content; cursor:pointer; transition: all .2s linear;").btn-success Сохранить изменения
    script.
      $(document).ready(function () {
        const birthdate = $('#birthdate');
        const editUserBirthdate = `#{editUser.birthdate}`;
        const formattedDate = editUserBirthdate.split('.').reverse().join('-');
        birthdate.val(formattedDate);
      });